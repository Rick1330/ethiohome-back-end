# ===============================================================
# == Ethio-Home Root Environment Variables                     ==
# ===============================================================
#
# Copy this file to .env at the root of the project and fill in
# the values for your local setup.

# --- Backend Configuration ---
NODE_ENV=development
PORT=5000

# --- Database ---
# Main database for development
DATABASE=mongodb://127.0.0.1:27017/ethiohome
# Separate database for running tests
DATABASE_TEST=mongodb://127.0.0.1:27017/ethiohome-test

# --- Security ---
JWT_SECRET=a-long-and-secure-secret-for-jwt
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# --- Email Service (Mailtrap.io) ---
MAILTRAP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=
MAILTRAP_PASSWORD=

# --- Payment Gateway (Chapa) ---
CHAPA_API_KEY=

# --- Alternative Email (Gmail) ---
GMAIL_USERNAME=
GMAIL_APP_PASSWORD=


# --- Frontend Configuration ---
# The base URL for the backend API, used by the frontend
VITE_API_URL=http://localhost:5000/api/v1

# Set to 'true' to enable the MSW mock API for frontend development
# Set to 'false' to connect to the live backend specified by VITE_API_URL
VITE_USE_MSW=true
